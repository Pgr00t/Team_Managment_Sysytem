@model TeamManagement.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "DepartmentForm";
}


<h2>Department Details</h2>
<hr />

@using (@Html.BeginForm("Save", "Department"))
{
    <div class="form-group row">
        @Html.LabelFor(m => m.Department.DepartmentName, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Department.DepartmentName, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(m => m.Department.DepartmentId)

    var c = @Model.Department.DepartmentId > 0 ? "Update" : "Save";
    <button type="submit" class="btn btn-primary">@c</button>
    @Html.ActionLink("Cancel", "Index", new { controller = "Department" }, new { @class = "btn btn-secondary" })
}
